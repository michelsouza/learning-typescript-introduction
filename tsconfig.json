{
    "compilerOptions": {
        "outDir": "dist/js", // pasta destino apos compilação dos arquivos
        "target": "ES6", // aponta a versão do Ecma Script  a qual seja compilado
        "noEmitOnError": true, // não gera o arquivo js enquanto o codigo conter erro em ts
        "noImplicitAny": true // informa ao ts para não utilizar o valor any (default) para itens não tipados
    },
    "include": ["app/**/*"] // pasta origem dos arquivos typescript
}
